generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id            String        @id @default(uuid())
  userId        String
  userName      String
  userEmail     String
  phoneNumber   String
  address       String
  streetNum     String
  houseNum      String
  city          String
  totalPrice    Float
  status        OrderStatus   @default(pending)
  paymentMethod PaymentMethod @default(cod)
  products      Json[]
}

enum OrderStatus {
  pending
  processing
  rejected
  refunding
  refunded
  delivered
}

enum PaymentMethod {
  cod
  stripe
  paypal
}
